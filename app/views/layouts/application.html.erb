<!DOCTYPE html>
<html>
<head>
  <title>PutItInYourFace</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
	<div class='flash' id='<%= key %>'>
		<%= value %>
	</div>
<% end %>
<nav>
  <%= link_to "Sign up", new_user_registration_path %>
</nav>
<%= yield %>

</body>
</html>
